{
  "name": "itaro",
  "version": "0.1.0",
  "description": "A tool for taro build multiple app",
  "main": "dist/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run prod",
    "dev": "tsc -w",
    "prod": "cross-env NODE_ENV=prod tsc",
    "test:dev": "cross-env NODE_ENV=dev ./bin/itaro build",
    "test:dev-w": "cross-env NODE_ENV=dev ./bin/itaro watch",
    "clean": "rimraf dist",
    "update": "npm run build && npm uninstall -g itaro && npm install -g",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bin": {
    "itaro": "bin/itaro"
  },
  "dependencies": {
    "@types/node": "^14.0.6",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "shelljs": "^0.8.4"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "chokidar": "^3.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rimraf": "^3.0.2",
    "typescript": "3.8.3"
  }
}